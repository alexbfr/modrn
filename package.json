{
  "name": "Modrn",
  "version": "1.0.0",
  "dependencies": {
    "@types/marked": "^2.0.4",
    "csstype": "^3.0.8",
    "date-fns": "^2.22.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/jasmine": "^3.8.1",
    "@types/react": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "autoprefixer": "^10.3.1",
    "browserify": "^17.0.0",
    "chai": "^4.3.4",
    "chokidar": "^3.5.2",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^6.2.0",
    "cp-cli": "^2.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.30.0",
    "jasmine": "^3.8.0",
    "karma": "^6.3.4",
    "karma-chai": "^0.1.0",
    "karma-firefox-launcher": "^2.1.1",
    "karma-jasmine": "^4.0.1",
    "karma-typescript": "^5.5.1",
    "mkdirp": "^1.0.4",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "rimraf": "^3.0.2",
    "shx": "^0.3.3",
    "tailwindcss": "^2.2.4",
    "tinyify": "^3.0.0",
    "tsify": "^5.0.4",
    "typescript": "^4.3.5",
    "watchify": "^4.0.0"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "scripts": {
    "test": "karma start",
    "clean": "rimraf target/* && mkdirp target",
    "copy-html": "shx cp html/* target/",
    "lint": "npx eslint js/**/*.ts",
    "watch-css": "npx chokidar-cli styles/**/*.css --initial --command \"node node_modules/postcss-cli/bin/postcss styles/*.css -o target/styles.css\"",
    "watch-html": "npx chokidar-cli html/**/*.html --initial --command \"npm run copy-html\"",
    "watch-js": "node node_modules/watchify/bin/cmd.js js/main.ts -p [ tsify --noImplicitAny] -o target/bundle.js -v",
    "watch": "npm run clean && concurrently --kill-others \"npm run watch-css\" \"npm run watch-html\" \"npm run watch-js\"",
    "build-js": "cross-env NODE_ENV=production browserify js/main.ts -p [ tsify --noImplicitAny ] -p [ tinyify ] -o target/bundle.js -v",
    "build-css": "cross-env NODE_ENV=production node node_modules/postcss-cli/bin/postcss styles/*.css -o target/styles.css",
    "build": "npm run lint && npm run clean && npm run copy-html && concurrently \"npm run build-js\" \"npm run build-css\""
  },
  "_id": "Modrn@1.0.0"
}
