{
  "include": ["js/**/*"],
  "exclude": ["node_modules", "output", "target"],
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017",
      "ESNext"
    ],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "es6",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "sourceMap": false,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "checkJs": false,
    "declarationDir": "./",
    "declaration": true,
    "outDir": "output"
  },
  "typedocOptions": {
    "entryPoints": [
      "./js/source"
    ],
    "exclude": [
      "**/*.test.ts"
    ]
  }
}